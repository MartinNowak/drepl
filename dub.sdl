name "drepl"
description "A REPL for D"
authors "Martin Nowak"
copyright "Copyright Â© 2014-2016, DREPL team"
license "BSL-1.0"
dependency "dmd-semver" version="~>7.7.0-rc.1"
dependency "colorize" version="~>1.0.5"
lflags "-l:libphobos2.so" "-ldl" platform="linux-dmd"
configuration "console" {
	dependency "linenoise" version="~>1.0.0"
	targetType "executable"
	mainSourceFile "src/console.d"
}
configuration "library" {
	targetType "library"
	excludedSourceFiles "src/console.d"
}
